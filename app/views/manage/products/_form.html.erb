<%= simple_form_for [:manage, product] do |f| %>
  <%= f.input :name %>
  <%= f.input :sku %>
  <%= f.input :price, label: "Price $" %>
  <%= f.input :full_price, label: "Full_price $" %>
  <%= f.input :description, as: :rich_text_area %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
