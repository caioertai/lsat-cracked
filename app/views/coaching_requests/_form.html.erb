<%= simple_form_for coaching_request do |f| %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :target_law_school, label: "Target Law School", required: false %>
  <%= f.input :target_lsat_score, label: "Target LSAT Score", required: false %>
  <%= f.input :message, as: :text, required: false %>
  <%= recaptcha_tags %>
  <%= f.button :submit, "Send Coaching Request", class: "btn btn-primary" %>
<% end %>
