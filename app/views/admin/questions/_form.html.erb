<%= simple_form_for [:admin, question] do |f| %>
  <%= f.label :prompt %>
  <%= f.rich_text_area :prompt %>
  <%= f.label :explanation %>
  <%= f.rich_text_area :explanation %>
  <%= f.association :sections %>
  <%= f.association :articles %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
