<%= simple_form_for [:admin, question] do |f| %>
  <div class="form-group">
    <%= f.label :prompt %>
    <%= f.rich_text_area :prompt %>
  </div>
  <div class="form-group">
    <%= f.label :explanation %>
    <%= f.rich_text_area :explanation %>
  </div>
  <%= f.association :sections, input_html: { class: "custom-select" } %>
  <%= f.association :articles, input_html: { class: "custom-select" } %>
  <%= f.association :tags, input_html: { class: "custom-select" } %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
