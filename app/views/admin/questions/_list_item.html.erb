<li class="mb-5">
  <%= question.prompt %>
  <%= render "questions/tags", question: question %>
  <br>
  <small>
    <%= link_to "Edit", edit_admin_question_path(question), class: "text-muted" if policy(question).edit?  %>
    <%= link_to "Remove", admin_question_path(question), method: :delete, class: "text-danger"  if policy(question).destroy? %>
  </small>

  <ul>
    <% question.answers.each do |answer| %>
      <li>
        <%= answer.correct? ? "âœ…" : "ðŸŸ¥" %>
        <%= answer.content.to_plain_text %>
        <%= link_to "x", admin_answer_path(answer), method: :delete, class: "text-light bg-danger py-1 px-2"  if policy([:admin, answer]).destroy? %>
      </li>
    <% end %>
    <li><%= link_to "Add answer", new_admin_question_answer_path(question) %></li>
  </ul>
</li>
