<div class="container pt-5">
  <h1>Articles</h1>
  <ul class="list-group">
    <% @articles.each do |article| %>
      <%= render "list_item", article: article %>
    <% end %>
    <li class="list-group-item"><%= link_to "Add article", new_admin_article_path, class: "btn btn-primary btn-block" %></li>
  </ul>
</div>
