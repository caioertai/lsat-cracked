<% if status.completion_rate > 0 %>
  <div class="progress mt-2 mb-2">
    <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: <%= number_to_percentage(status.completion_rate * 100) %>"></div>
    <div class="progress-popup"><%= number_to_percentage(status.completion_rate * 100, precision: 0) %></div>
  </div>
<% end %>
