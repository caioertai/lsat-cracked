<div class="<%= quiz_question.correct? ? "border-success" : "border-danger" %> card-header border d-flex justify-content-between align-items-center" id="heading-<%= quiz_question.id %>">
  <div class="link" data-toggle="collapse" data-target="#collapse<%= quiz_question.id %>" aria-controls="collapse-<%= quiz_question.id %>">
    <%= quiz_question.question.content.to_plain_text.truncate(64) %>
  </div>

  <% if quiz_question.correct? %>
    <span class="badge badge-success">Correct</span>
  <% else %>
    <span class="badge badge-danger">Wrong</span>
  <% end %>
</div>
