<div class="tab-pane fade" id="next-section" role="tabpanel" aria-labelledby="next-section-tab">
  <h2>Check Out These Sections Next</h2>
  <ul>
    <% current_user.course_status.missing_sections.first(3).each do |section| %>
      <li>
        <%= link_to section.title, course_section_path(section) %>
      </li>
    <% end %>
  </ul>
</div>